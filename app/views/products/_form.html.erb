<div class="columns is-centered">
  <div class="column is-half">
    <div class="card">
      <div class="card-content">
        <%= form_with(model: product, local: true) do |form| %>

          <div class="field">
            <%= form.label :name, class: 'label' %>
            <div class="control">
              <%= form.text_field :name, class: 'input' %>
            </div>
          </div>

          <div class="field">
            <%= form.label :description, class: 'label' %>
            <div class="control">
              <%= form.text_area :description, class: 'textarea' %>
            </div>
          </div>

          <div class="field">
            <%= form.label :price, class: 'label' %>
            <div class="control">
              <%= form.number_field :price, class: 'input', step: '0.01' %>
            </div>
          </div>

          <div class="field">
            <%= form.label :image, class: 'label' %>
            
            <%= form.file_field :image, class: 'input' %>
            
          </div>

          <div class="field">
            <div class="control">
              <%= form.submit 'Guardar', class: 'button is-success' %>
            </div>
          </div>

        <% end %>
        <%= link_to 'Volver', products_path, class: 'button is-link mt-3' %>
      </div>
    </div>
  </div>
</div>
